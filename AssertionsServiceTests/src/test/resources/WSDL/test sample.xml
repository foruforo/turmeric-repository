<schema>

    <elementType id="name">
        <string/>
    </elementType>

    <elementType id="Person">
        <any/>
    </elementType>

    <elementType id="author">
        <string/>
    </elementType>

    <elementType id="titlePart">
        <string/>
    </elementType>

    <elementType id="title">
        <mixed><element type="#titlePart"/></mixed>
    </elementType>

    <elementType id="Book">
        <element type="#title" occurs="OPTIONAL"/>
        <element type="#author" occurs="ONEORMORE"/>
    </elementType>



