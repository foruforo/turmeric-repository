<assembly>
	<id>bin</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	
	<dependencySets>
		<dependencySet>
			<outputDirectory>/webapp</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>*:war</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.ebayopensource.turmeric.intf:*</include>
				<include>org.ebayopensource.turmeric.impl:*</include>
				<include>org.ebayopensource.turmeric.client:*</include>
				<include>org.ebayopensource.turmeric.errorlib:*</include>
				<include>org.ebayopensource.turmeric.typelib:*</include>
				<include>org.ebayopensource.turmeric.repository:*</include>
			</includes>
			<excludes>
				<exclude>*:war</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>